@model ExpensesLogger.Models.Expense
@{
    ViewBag.Title = "Main";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Main Page</h2>
@using (Html.BeginForm("EnterExpenses", "Home"))
{
    <label>Enter the date you wish to update</label>
    <input id="date" type="text" name="searchDate" required="true"/>
    <button type="submit" class="btn btn-primary" value="Search">Submit</button>
    @Html.HiddenFor(e => e.UserId)
}